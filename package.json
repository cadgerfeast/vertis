{
  "private": true,
  "type": "module",
  "workspaces": [
    "docs",
    "packages/vertis",
    "shared/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "commitlint": "commitlint --edit",
    "predev": "npm run build",
    "dev": "nx run-many -t dev --output-style=stream --projects",
    "build": "nx run-many -t build --output-style=stream --projects",
    "test": "nx run-many -t test --output-style=stream --projects",
    "lint": "nx run-many -t lint --output-style=stream --projects",
    "preview": "nx preview docs",
    "version": "lerna version",
    "changelog": "vertis generate",
    "publish": "lerna publish from-git"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "husky": "^8.0.3",
    "lerna": "^7.3.0",
    "nx": "^16.9.1"
  }
}
